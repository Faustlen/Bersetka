<Window x:Class="Bersetka.windows.main.editUser.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование участника" Height="460" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Background="#333333" Foreground="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <!-- Последняя строка растягивается -->
        </Grid.RowDefinitions>

        <!-- Имя -->
        <TextBlock Text="Имя:" FontSize="16" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox Name="txtUserName" Width="300" Height="30" Grid.Row="1"
                 Background="#444444" Foreground="White" BorderBrush="Gray"
                 FontSize="16"/>

        <!-- Очки -->
        <TextBlock Text="Очки:" FontSize="16" Grid.Row="2" Margin="0,10,0,5"/>
        <TextBox Name="txtScore" Width="300" Height="30" Grid.Row="3"
                 Background="#444444" Foreground="White" BorderBrush="Gray"
                 FontSize="16"/>

        <!-- Победы -->
        <TextBlock Text="Победы:" FontSize="16" Grid.Row="4" Margin="0,10,0,5"/>
        <TextBox Name="txtWins" Width="300" Height="30" Grid.Row="5"
                 Background="#444444" Foreground="White" BorderBrush="Gray"
                 FontSize="16"/>

        <!-- Поражения -->
        <TextBlock Text="Поражения:" FontSize="16" Grid.Row="6" Margin="0,10,0,5"/>
        <TextBox Name="txtLosses" Width="300" Height="30" Grid.Row="7"
                 Background="#444444" Foreground="White" BorderBrush="Gray"
                 FontSize="16"/>

        <!-- Ничьи -->
        <TextBlock Text="Ничьи:" FontSize="16" Grid.Row="8" Margin="0,10,0,5"/>
        <TextBox Name="txtDraws" Width="300" Height="30" Grid.Row="9"
                 Background="#444444" Foreground="White" BorderBrush="Gray"
                 FontSize="16"/>

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" Grid.Row="10" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Name="btnSave" Content="Сохранить" Width="120" Height="40" Margin="10,0,10,0"
                    Click="btnSave_Click" Background="#B25427" Foreground="White" FontSize="16"/>
            <Button Name="btnCancel" Content="Отмена" Width="100" Height="40"
                    Click="btnCancel_Click" Background="Gray" Foreground="White" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
