<Window x:Class="Bersetka.windows.main.addUser.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление пользователя" Height="200" Width="350"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Background="#333333" Foreground="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Введите имя игрока:" FontSize="16" 
                   VerticalAlignment="Center" Margin="0,0,0,10"/>

        <TextBox Name="txtUserName" Width="300" Height="30" Grid.Row="1"
                 Background="#444444" Foreground="White" BorderBrush="Gray"
                 FontSize="16"/>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Name="btnOK" Content="OK" Width="100" Height="40" Margin="10,0,10,0"
                    Click="btnOK_Click" Background="#B25427" Foreground="White" FontSize="16"/>
            <Button Name="btnCancel" Content="Отмена" Width="100" Height="40"
                    Click="btnCancel_Click" Background="Gray" Foreground="White" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
